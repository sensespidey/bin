#!/bin/bash

# getdrush is designed to do one thing, and do it well: get and install drush on a server.

# For now, the url is hardcoded
RETURN=`pwd`
DRUSH_URL=http://ftp.drupal.org/files/projects/drush-6.x-3.3.tar.gz
DRUSH_TGZ=drush-6.x-3.3.tar.gz
DRUSH_MAKE_URL=http://ftp.drupal.org/files/projects/drush_make-6.x-2.0-beta9.tar.gz
DRUSH_MAKE_TGZ=drush_make-6.x-2.0-beta9.tar.gz
DRUSH_ROOT=/usr/local/src

#mkdir $DRUSH_DIR
cd $DRUSH_ROOT

wget $DRUSH_URL
wget $DRUSH_MAKE_URL

tar xvfz $DRUSH_TGZ
tar xvfz $DRUSH_MAKE_TGZ

mv drush_make drush/commands/

rm $DRUSH_TGZ
rm $DRUSH_MAKE_TGZ

ln -s /usr/local/src/drush/drush /usr/local/bin/drush

cd $RETURN
